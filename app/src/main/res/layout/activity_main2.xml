<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="@color/white">

    <com.github.mikephil.charting.charts.RadarChart
        android:id="@+id/radarChart"
        android:layout_width="match_parent"
        android:layout_height="594dp"
        android:layout_gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radarChart">

        <Button
            android:id="@+id/webBackButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/baseline_arrow_back_ios_new_24" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ButtonToActualData"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Actual Data"
            android:textColor="@color/white"
            android:background="@drawable/rectangle"
            android:textSize="17sp"
            android:gravity="center"
            android:textAllCaps="false"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/poppinsregular"/>
        <Button
            android:id="@+id/buttonToSuggestions"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Suggestions"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/rectangle"
            android:textSize="17sp"
            android:textAllCaps="false"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/poppinsregular"
            />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>




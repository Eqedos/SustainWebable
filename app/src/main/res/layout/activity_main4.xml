<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/suggestionsBackButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/baseline_arrow_back_ios_new_24" />

        <TextView
            android:paddingTop="30dp"
            android:textSize="30dp"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:text="Browse Greener">
        </TextView>

    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green">
            <TextView
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppinsmedium"
                android:paddingStart="10dp"
                android:text="Users"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:paddingTop="10dp"
        android:textSize="14sp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="1. Lower your screen brightness"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/black"/>
    <TextView
        android:paddingTop="10dp"
        android:textSize="14sp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="2. Enable strict tracking protection"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/black"/>
    <TextView
        android:paddingTop="10dp"
        android:textSize="14sp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="3. Reuse your searches"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/black"/>
    <TextView
        android:paddingTop="10dp"
        android:textSize="14sp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="4. Download instead of streaming media"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/black"/>
    <TextView
        android:paddingTop="10dp"
        android:textSize="14sp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="5. Choose a dark theme"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/black"/>

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green">
            <TextView
                android:paddingStart="10dp"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppinsmedium"
                android:text="Developers"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:paddingTop="10dp"
        android:textSize="14sp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="1. Choose system fonts"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/black"/>
    <TextView
        android:paddingTop="10dp"
        android:textSize="14sp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="2. Use less JavaScript"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/black"/>
    <TextView
        android:paddingTop="10dp"
        android:textSize="14sp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="3. Use server caching"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/black"/>
    <TextView
        android:paddingTop="10dp"
        android:textSize="14sp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="4. Use Accelerated Mobile Pages"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/black"/>
    <TextView
        android:paddingTop="10dp"
        android:textSize="14sp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="5. Build static web pages"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/black"/>
    <TextView
        android:paddingTop="10dp"
        android:textSize="14sp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="6. Use Progressive Web App technology"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/black"/>
    <TextView
        android:paddingTop="10dp"
        android:textSize="14sp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="7. Choose hosts with a high PUE rating"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/black"/>




</LinearLayout>
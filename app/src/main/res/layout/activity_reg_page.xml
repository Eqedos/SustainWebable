<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Black background with "Registration" text on top -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Registration"
        android:textColor="@color/green"
        android:textSize="28sp"
        android:fontFamily="@font/poppinsbold"
        android:textColorHighlight="@color/yellow"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/white"
        tools:context=".LoginRegister.RegistrationActivity"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Name"
            android:layout_gravity="left"
            android:fontFamily="@font/poppinsmedium"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/green"
            android:textSize="20sp"/>
        <EditText
            android:hint="Name"
            android:id="@+id/name"
            android:layout_gravity="center"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="@color/darkgreen"
            android:textColorHint="@color/light_gray"
            android:inputType="textPersonName"
            android:fontFamily="@font/poppinsregular"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Email"
            android:textColor="@color/green"
            android:textSize="20sp" />

        <EditText
            android:hint="Email"
            android:id="@+id/email"
            android:layout_gravity="center"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textSize="14dp"
            android:textColor="@color/darkgreen"
            android:textColorHint="@color/light_gray"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/comfortaa" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Password"
            android:layout_gravity="left"
            android:fontFamily="@font/poppinsmedium"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/green"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/comfortaa"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="@color/darkgreen"
            android:textColorHint="@color/light_gray"
            android:textSize="14dp" />

        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="Are you a user or a developer?"
            android:layout_gravity="left"
            android:fontFamily="@font/poppinsmedium"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/green"
            android:textSize="18dp"/>
        <RadioGroup
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup"
            android:layout_marginLeft="35dp">
            <RadioButton
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="User"
                android:textSize="15dp"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/black"></RadioButton>
            <RadioButton
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="Developer"
                android:textSize="15dp"
                android:fontFamily="@font/comfortaa"
                android:textColor="@color/black"/></RadioGroup>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/handsonglobe"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/comfortaa"
            android:padding="12dp"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/comfortaa"
            android:textStyle="bold"
            android:textSize="19dp"/>



    </LinearLayout>
</LinearLayout>